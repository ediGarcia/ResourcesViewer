<Application x:Class="ResourcesViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:WpfHelpers.Converters;assembly=WpfHelpers"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter
                x:Key="BooleanToVisibilityConverter" />

            <converters:InverseBooleanConverter
                x:Key="InverseBooleanConverter" />

            <converters:InverseBooleanToVisibilityConverter
                x:Key="InverseBooleanToVisibilityConverter" />

            <SolidColorBrush x:Key="Background">
                #F8FAFC
            </SolidColorBrush>

            <Style x:Key="PopupBackground"
                   TargetType="Border">
                <Setter
                    Property="Background"
                    Value="#AFFF" />
            </Style>

            <Style x:Key="PopupContent"
                   TargetType="Border">
                <Setter
                    Property="Background"
                    Value="{StaticResource Background}" />
                <Setter
                    Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            Color="#EEE" />
                    </Setter.Value>
                </Setter>
                <Setter
                    Property="HorizontalAlignment"
                    Value="Center" />
                <Setter
                    Property="Padding"
                    Value="10" />
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter
                    Property="VerticalAlignment"
                    Value="Center" />
            </Style>

            <Style x:Key="PopupTitle"
                TargetType="TextBlock">
                <Setter
                    Property="FontSize"
                    Value="15" />
                <Setter
                    Property="FontWeight"
                    Value="DemiBold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
